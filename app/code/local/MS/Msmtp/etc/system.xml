<?xml version="1.0"?>
<config>
	  <sections>
		<system  translate="label" module="msmtp">            
					<groups>
				      <msmtp translate="label"> 
					  <label>Marketspace Email Smtp</label>
					  <frontend_type>text</frontend_type>
					  <sort_order>0</sort_order>
					  <show_in_default>1</show_in_default>
					  <show_in_website>1</show_in_website>
					  <show_in_store>1</show_in_store>
				       <fields>
                           <smtp_type translate="label">
                               <label>Smtp Type</label>
                               <frontend_type>select</frontend_type>
                               <source_model>adminhtml/system_config_source_Msmtptypeoptions</source_model>
                               <sort_order>0</sort_order>
                               <show_in_default>1</show_in_default>
                               <show_in_website>1</show_in_website>
                               <show_in_store>0</show_in_store>
                               <comment>type of mail transport currently only smtp - will later add providers</comment>
                           </smtp_type>
                          <smtp_enabled translate="label">
                           <label>Enable Smtp</label>
                           <frontend_type>select</frontend_type>
                           <source_model>adminhtml/system_config_source_Msmtpenabledoptions</source_model>
                           <sort_order>0</sort_order>
                           <show_in_default>1</show_in_default>
                           <show_in_website>1</show_in_website>
                           <show_in_store>0</show_in_store>
                           <comment>turn on smtp</comment>
                          </smtp_enabled>
                          <authentication translate="label">
                            <label>Authentication</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_Diyoptions13950630430</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
							<comment>(usually login) This will determine if and how you authenticate with your SMTP server. If you choose no authentication then the username and password below are not used.</comment>
                          </authentication>
                          <username translate="label">
                            <label>Username</label>
							<frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
							<comment>If you use Authentication for your SMTP server this is the username used to authenticate.</comment>
                          </username>
                          <password translate="label">
                            <label>Password</label>
							<frontend_type>password</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
							<comment>If you use Authentication for your SMTP server this is the password used to authenticate.</comment>
                          </password>
                          <host translate="label">
                            <label>Host</label>
							<frontend_type>text</frontend_type>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
							<comment>This is the SMTP server hostname you would like to send your emails through. This is required.</comment>
                          </host>
                          <port translate="label">
                            <label>Port</label>
							<frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
							<comment>This is the port on the SMTP server you connect to. The value is optional</comment>
                          </port>
                          <ssl translate="label">
                            <label>SSL Security</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_Diyoptions13950630435</source_model>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>This will determine if any SSL security should be used to connect to your SMTP server.</comment>
                          </ssl>
					   </fields>
					   </msmtp>
					</groups>
		</system>
	  </sections>
</config>
